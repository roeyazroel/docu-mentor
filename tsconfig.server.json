{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2019"],
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false
  },
  "include": [
    "server.ts",
    "websocket.ts",
    "./app/**/*",
    "./context/**/*",
    "./lib/**/*",
    "./types/**/*",
    "./utils/**/*",
    "./components/**/*",
    "./hooks/**/*",
    "./pages/**/*",
    "./public/**/*",
    "./styles/**/*"
  ]
}
